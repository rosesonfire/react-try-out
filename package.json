{
  "name": "pa",
  "version": "1.0.0",
  "description": "Personal Assistant",
  "main": "index.js",
  "config": {
    "src_dir": "./src",
    "prod_dir": "./dist",
    "back-end_dir": "./dist/main/back-end",
    "back_end_server": "./dist/main/back-end",
    "front_end_dir": "./dist/main/front-end",
    "webpack_config": "./dist/main/front-end/webpack.config.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf $npm_package_config_prod_dir && mkdir $npm_package_config_prod_dir",
    "build": "babel $npm_package_config_src_dir -d $npm_package_config_prod_dir --copy-files",
    "clean-build": "npm run clean && npm run build",
    "build-with-watch": "babel $npm_package_config_src_dir --watch -d $npm_package_config_prod_dir --copy-files",
    "start-back-end-server": "nodemon --watch $npm_package_config_back_end_dir $npm_package_config_back_end_server",
    "start-front-end-server": "webpack-dev-server --watch --config $npm_package_config_webpack_config --context $npm_package_config_front_end_dir",
    "start-servers-and-watchers": "npm run start-back-end-server & npm run start-front-end-server & npm run build-with-watch",
    "start": "npm run clean-build && npm run start-servers-and-watchers"
  },
  "author": "Ishtiaque Khan",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "colors": "^1.1.2",
    "css-loader": "^0.28.7",
    "electrolyte": "^0.5.0",
    "express": "^4.16.2",
    "extract-text-webpack-plugin": "^3.0.0",
    "html-webpack-exclude-assets-plugin": "0.0.5",
    "html-webpack-plugin": "^2.30.1",
    "mongodb": "^2.2.31",
    "node": "^8.3.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.12.1",
    "on-build-webpack": "^0.1.0",
    "react": "^16.0.0",
    "react-addons-css-transition-group": "^15.6.2",
    "react-dom": "^16.0.0",
    "react-infinite-calendar": "^2.3.1",
    "react-router-dom": "^4.2.2",
    "sass-loader": "^6.0.6",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.7.1"
  }
}
